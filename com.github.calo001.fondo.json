{
    "app-id": "com.github.calo001.fondo",
    "base": "io.elementary.BaseApp",
    "base-version": "juno-22.08",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.calo001.fondo",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.gnome.SessionManager",
        "--talk-name=org.freedesktop.FileManager1",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=host",
        "--metadata=X-DConf=migrate-path=/com/github/calo001/fondo/"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/libsoup/libsoup-2.4.json",
        {
            "name": "fondo",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/calo001/fondo.git",
                    "tag": "1.5.2",
                    "commit": "bbdd066014888f5c5de588e2871a59ede0f7a566"
                }
            ]
        }
    ]
}
